package tools;

import java.awt.Color;
import java.awt.Shape;
import java.awt.Stroke;

/**
 * Stores a single shape that has been drawn.
 * @author Zachariah Wingo
 * @version 1.0
 */
public class DrawnShapes {

    /** Color of the shape. */
    private final Color myColor;
    
    /** The shape that has been drawn. */
    private final Shape myShape;
    
    /** The stroke of the shape. */
    private final Stroke myStroke;
    
    /**
     * Constructor of drawn shape.
     * @param theColor the color of the shape.
     * @param theShape the drawn shape.
     * @param theStroke the stroke of the shape.
     */
    public DrawnShapes(final Color theColor, final Shape theShape, final Stroke theStroke) {
        myColor = theColor;
        myShape = theShape;
        myStroke = theStroke;
    }
    
    /**
     * Gets the color of the shape.
     * @return returns the shape of the color.
     */
    public Color getColor() {
        return myColor;
    }
    
    /**
     * Gets the shape.
     * @return returns the shape.
     */
    public Shape getShape() {
        return myShape;
    }
    
    /**
     * Gets the stroke of the shape.
     * @return returns the stroke of the shape.
     */
    public Stroke getStroke() {
        return myStroke;
    }
    
}
